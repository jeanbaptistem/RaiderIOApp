<resources>

    <style name="Theme.RaiderIoApp" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorOnBackground">@color/onBackgroundColor</item>
        <item name="colorSurface">@color/primaryTextColor</item>
        <item name="colorOnSurface">@color/primaryLightColor</item>
        <item name="colorError">@color/errorColor</item>
        <item name="colorOnError">@color/primaryTextColor</item>
    </style>

    <style name="Theme.RaiderIoApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Theme.RaiderIoApp.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="Theme.RaiderIoApp.PopupOverlay" parent="Theme.RaiderIoApp" />


</resources>
