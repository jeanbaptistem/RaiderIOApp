<resources>

    <!-- Base application theme. -->
    <style name="Theme.RaiderIoApp" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/colorWarn</item>
    </style>

    <style name="Theme.RaiderIoApp.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RaiderIoApp.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="Theme.RaiderIoApp.PopupOverlay" parent="Theme.MaterialComponents" />

</resources>
