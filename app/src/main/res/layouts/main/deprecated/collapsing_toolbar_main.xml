<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <fr.jbme.raiderioapp.components.DynamicHeightImageView android:id="@+id/dynamicHeightImageView"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:scaleType="centerCrop" app:height_ratio="0.5"
        tools:src="@tools:sample/backgrounds/scenic[0]" />

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:id="@+id/charNameTextView" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginStart="16dp"
            android:textSize="36sp" android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.60" tools:text="Kagdush" />

        <TextView android:id="@+id/charClassTextView" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            android:textSize="20sp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/charNameTextView"
            app:layout_constraintTop_toBottomOf="@+id/charNameTextView" tools:text="Shaman" />

        <TextView android:id="@+id/charSpecTextView" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginStart="8dp"
            android:textSize="20sp" app:layout_constraintBottom_toBottomOf="@+id/charClassTextView"
            app:layout_constraintStart_toEndOf="@+id/charClassTextView"
            app:layout_constraintTop_toTopOf="@+id/charClassTextView"
            app:layout_constraintVertical_bias="1.0" tools:text="Enhancement" />

        <TextView android:id="@+id/charIlvlTetView" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginStart="8dp"
            android:textSize="24sp" app:layout_constraintBottom_toBottomOf="@+id/charSpecTextView"
            app:layout_constraintStart_toEndOf="@+id/charSpecTextView" tools:text="Ilvl: 500" />

        <TextView android:id="@+id/charRaceTextView" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginStart="16dp"
            android:textSize="18sp" app:layout_constraintBottom_toBottomOf="@+id/charNameTextView"
            app:layout_constraintStart_toEndOf="@+id/charNameTextView" tools:text="Orc" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

