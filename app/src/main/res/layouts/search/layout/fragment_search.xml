<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.fragment.search.SearchFragment"
    tools:showIn="@layout/main_app_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/characterInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="24dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="24dp" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/charThumbnail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitCenter"
                app:civ_border="true"
                app:civ_border_color="@color/primaryTextColor"
                app:civ_border_width="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars[0]" />

            <androidx.cardview.widget.CardView
                android:id="@+id/subThumbnailCradView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="@+id/charThumbnail"
                app:layout_constraintStart_toStartOf="@+id/charThumbnail"
                app:layout_constraintTop_toTopOf="@+id/charThumbnail">

                <TextView
                    android:id="@+id/charClass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/primaryLightColor"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:text="Shaman" />
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/charInfoLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/charThumbnail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/charThumbnail"
                app:layout_constraintTop_toTopOf="@+id/charThumbnail">

                <TextView
                    android:id="@+id/charName"
                    style="@style/Widget.MaterialComponents.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Kagdush" />

                <TextView
                    android:id="@+id/region"
                    style="@style/Widget.MaterialComponents.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:textAllCaps="true"
                    android:textColor="@color/primaryLightColor"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/charName"
                    tools:text="(EU)" />

                <TextView
                    android:id="@+id/realm"
                    style="@style/Widget.MaterialComponents.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/primaryLightColor"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBaseline_toBaselineOf="@+id/region"
                    app:layout_constraintStart_toEndOf="@+id/region"
                    tools:text="Ysondre" />

                <TextView
                    android:id="@+id/bestScoreDesc"
                    style="@style/Widget.MaterialComponents.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Best Mythic+ Score"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/primaryLightColor"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBaseline_toBaselineOf="@+id/realm"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/bestScoreTextView"
                    style="@style/Widget.MaterialComponents.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    app:layout_constraintBaseline_toBaselineOf="@+id/charName"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="3,704" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonMenuLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="24dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="387dp" />

            <Button
                android:id="@+id/buttonFavorites"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:icon="@drawable/ic_star_white_40dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/primaryTextColor"
                app:layout_constraintBaseline_toBaselineOf="@+id/buttonCompare"
                app:layout_constraintEnd_toStartOf="@+id/buttonCompare"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:rippleColor="@color/primaryLightColor" />

            <Button
                android:id="@+id/buttonCompare"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:icon="@drawable/ic_compare_white_40dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@android:color/white"
                app:layout_constraintBaseline_toBaselineOf="@+id/buttonWLogs"
                app:layout_constraintEnd_toStartOf="@+id/buttonWLogs"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/buttonFavorites"
                app:rippleColor="@color/primaryLightColor" />

            <Button
                android:id="@+id/buttonWLogs"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:icon="@drawable/ic_format_list_bulleted_white_40dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@android:color/white"
                app:layout_constraintBaseline_toBaselineOf="@+id/buttonArmory"
                app:layout_constraintEnd_toStartOf="@+id/buttonArmory"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/buttonCompare"
                app:rippleColor="@color/primaryLightColor" />

            <Button
                android:id="@+id/buttonArmory"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                app:icon="@drawable/ic_mark_white_40dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/buttonWLogs"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="@color/primaryLightColor" />

            <TextView
                android:id="@+id/buttonTextFavorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:text="Favorites"
                android:textColor="@color/primaryTextColor"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/buttonFavorites"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="@+id/buttonFavorites"
                app:layout_constraintTop_toTopOf="@+id/buttonFavorites" />

            <TextView
                android:id="@+id/buttontextCompare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:text="Compare"
                android:textColor="@color/primaryTextColor"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/buttonCompare"
                app:layout_constraintStart_toStartOf="@+id/buttonCompare"
                app:layout_constraintTop_toTopOf="@+id/buttonCompare" />

            <TextView
                android:id="@+id/buttonTextWLogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:text="Logs"
                android:textColor="@color/primaryTextColor"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/buttonWLogs"
                app:layout_constraintStart_toStartOf="@+id/buttonWLogs"
                app:layout_constraintTop_toTopOf="@+id/buttonWLogs" />

            <TextView
                android:id="@+id/buttonTextArmory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:text="Armory"
                android:textColor="@color/primaryTextColor"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/buttonArmory"
                app:layout_constraintStart_toStartOf="@+id/buttonArmory"
                app:layout_constraintTop_toTopOf="@+id/buttonArmory" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bestRunsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="24dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="24dp" />

            <TextView
                android:id="@+id/bestRunsTitle"
                style="@style/Widget.MaterialComponents.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Best runs"
                android:textColor="@color/primaryTextColor"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bestRunsSeeAll"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="See all"
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textColor="@color/primaryLightColor"
                android:textSize="12sp"
                android:textStyle="bold"
                app:iconPadding="0dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/bestRunsTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:rippleColor="@color/primaryLightColor" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bestRunsRecyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bestRunsTitle"
                tools:listitem="@layout/best_runs_card_view" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/statisticsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="24dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="24dp" />

            <TextView
                android:id="@+id/statisticsTitle"
                style="@style/Widget.MaterialComponents.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Statistics"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/primaryColor"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/statsButtonWorld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="false"
                app:contentPaddingLeft="5dp"
                app:contentPaddingRight="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/statisticsTitle"
                app:layout_constraintEnd_toStartOf="@+id/statsButtonRealm"
                app:layout_constraintTop_toTopOf="@+id/statisticsTitle">

                <TextView
                    android:id="@+id/statsButtonWorldText"
                    style="@style/Widget.MaterialComponents.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp"
                    android:text="World"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/statsButtonRealm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="false"
                app:contentPaddingLeft="5dp"
                app:contentPaddingRight="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/statsButtonWorld"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/statsButtonWorld">

                <TextView
                    android:id="@+id/statsButtonRealmText"
                    style="@style/Widget.MaterialComponents.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp"
                    android:text="Realm"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/statisticsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/statisticsTitle"
                tools:listitem="@layout/statistics_card_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
