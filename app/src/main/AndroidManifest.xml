<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.jbme.raiderioapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RaiderIOApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RaiderIoApp.NoActionBar">

        <activity
            android:name=".view.activity.login.LoginActivity"
            android:theme="@style/Theme.RaiderIoApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://raiderioapp.jbme.fr/callback” -->
                <data
                    android:host="${host}"
                    android:pathPrefix="${pathPrefix}"
                    android:scheme="${scheme}" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.activity.character.CharacterActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:theme="@style/Theme.RaiderIoApp.NoActionBar" />

        <activity
            android:name=".view.activity.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.RaiderIoApp">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activity.character.CharacterActivity" />
        </activity>
    </application>

</manifest>